<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Base.Theme.LearnWordsTrainer" parent="Theme.Material3.Dark.NoActionBar">
        <!-- Colors -->
        <item name="android:windowBackground">@color/background_dark</item>
        <item name="android:colorBackground">@color/background_dark</item>
        <item name="colorSurface">@color/surface_dark</item>
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/primary_variant</item>
        <item name="colorSecondary">@color/secondary</item>
        <item name="colorOnBackground">@color/text_primary_dark</item>
        <item name="colorOnSurface">@color/text_primary_dark</item>

        <!-- Text colors -->
        <item name="android:textColorPrimary">@color/text_primary_dark</item>
        <item name="android:textColorSecondary">@color/text_secondary_dark</item>

        <!-- Card style -->
        <item name="materialCardViewStyle">@style/Widget.App.CardView</item>

        <!-- TextInputLayout style -->
        <item name="textInputStyle">@style/Widget.App.TextInputLayout</item>

        <!-- Button style -->
        <item name="materialButtonStyle">@style/Widget.App.Button</item>

        <!-- Window decorations -->
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>
        <item name="android:windowLightStatusBar">false</item>
        <item name="android:windowLightNavigationBar">false</item>
    </style>

    <style name="Widget.App.CardView" parent="Widget.Material3.CardView.Filled">
        <item name="cardBackgroundColor">@color/card_background_dark</item>
        <item name="strokeColor">@color/card_stroke_dark</item>
        <item name="strokeWidth">1dp</item>
        <item name="cardElevation">0dp</item>
    </style>

    <style name="Widget.App.Button" parent="Widget.Material3.Button">
        <item name="android:textSize">18sp</item>
        <item name="cornerRadius">16dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:letterSpacing">0</item>
    </style>
</resources>