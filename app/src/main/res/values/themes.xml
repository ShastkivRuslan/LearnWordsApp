<resources>
    <style name="Base.Theme.LearnWordsTrainer" parent="Theme.Material3.Light.NoActionBar">
        <!-- Colors -->
        <item name="android:windowBackground">@color/background_light</item>
        <item name="android:colorBackground">@color/background_light</item>
        <item name="colorSurface">@color/surface_light</item>
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/primary_variant</item>
        <item name="colorSecondary">@color/secondary</item>

        <!-- Text colors -->
        <item name="android:textColorPrimary">@color/text_primary_light</item>
        <item name="android:textColorSecondary">@color/text_secondary_light</item>

        <!-- Card style -->
        <item name="materialCardViewStyle">@style/Widget.App.CardView</item>

        <!-- TextInputLayout style -->
        <item name="textInputStyle">@style/Widget.App.TextInputLayout</item>

        <!-- Button style -->
        <item name="materialButtonStyle">@style/Widget.App.Button</item>
    </style>

    <style name="Theme.LearnWordsTrainer" parent="Base.Theme.LearnWordsTrainer" />

    <style name="Widget.App.CardView" parent="Widget.Material3.CardView.Filled">
        <item name="cardBackgroundColor">@color/card_background_light</item>
        <item name="strokeColor">@color/card_stroke_light</item>
        <item name="strokeWidth">1dp</item>
        <item name="cardElevation">0dp</item>
    </style>

    <style name="Widget.App.TextInputLayout" parent="Widget.Material3.TextInputLayout.OutlinedBox">
        <item name="boxBackgroundColor">@color/input_background_light</item>
        <item name="android:textColorHint">@color/input_hint_light</item>
        <item name="boxStrokeColor">@color/primary</item>
        <item name="hintTextColor">@color/primary</item>
    </style>

    <style name="Widget.App.Button" parent="Widget.Material3.Button">
        <item name="android:textSize">18sp</item>
        <item name="cornerRadius">16dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:letterSpacing">0</item>
    </style>
</resources>